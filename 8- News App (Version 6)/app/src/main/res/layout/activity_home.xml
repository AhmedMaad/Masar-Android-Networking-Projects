<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:weightSum="4"
    tools:context=".HomeActivity">

    <androidx.appcompat.widget.AppCompatButton
        style="@style/HomeTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="openGeneralNews"
        android:text="general news" />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/HomeTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:onClick="openHealthNews"
        android:text="Health news" />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/HomeTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:onClick="openSportsNews"
        android:text="Sports news" />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/HomeTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:onClick="openTechnologyNews"
        android:text="Technology news" />

</LinearLayout>